<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Properties -->
	<bean id="configProp" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="fileEncoding" value="UTF-8"/>
	    <property name="locations">
	        <list>
	            <value>classpath:properties/local_properties.xml</value>
	        </list>
	    </property>
	</bean>

	<!-- Log4j -->
	<bean id="log4jInitialization" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>classpath:log4j/local_log4j.xml</value>
			</list>
		</property>
	</bean>
	
	<!-- 공통 설정 -->
	<import resource="classpath:context/ApplicationContext.xml" />
	
</beans>